<Layout title="Thank You | Amplifly">
  <Navigation />
  
  <section class="min-h-screen flex items-center justify-center bg-deep-navy text-white py-20">
    <div class="container px-6 md:px-8 text-center">
      <div class="bg-navy-light p-10 rounded-3xl max-w-2xl mx-auto">
        <div class="w-20 h-20 bg-bright-blue/20 rounded-full flex items-center justify-center mx-auto mb-6">
          <span class="text-bright-blue text-3xl">âœ“</span>
