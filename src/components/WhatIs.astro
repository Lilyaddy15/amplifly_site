<section class="py-20 bg-soft-blue">
  <div class="container px-6 md:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-deep-navy mb-6">
        See Amplifly in Action
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Get a glimpse of how Amplifly helps you track your wellness and get personalized support.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Dashboard Screen -->
      <div class="bg-white rounded-3xl p-6 shadow-lg">
        <div class="bg-deep-navy rounded-2xl overflow-hidden">
          <img 
            src="/images/app-screenshots/dashboard.png" 
            alt="Amplifly Dashboard showing health metrics and status" 
            class="w-full h-auto"
          />
        </div>
        <div class="mt-4 text-center">
          <h3 class="font-semibold text-deep-navy">Your Status Dashboard</h3>
          <p class="text-sm text-gray-600 mt-2">Track your HRV, readiness, sleep, and temperature in real-time</p>
        </div>
      </div>

      <!-- Tools Screen -->
      <div class="bg-white rounded-3xl p-6 shadow-lg">
        <div class="bg-deep-navy rounded-2xl overflow-hidden">
          <img 
            src="/images/app-screenshots/tools.png" 
            alt="Amplifly Tools screen with breathing exercises and wellness techniques" 
            class="w-full h-auto"
          />
        </div>
        <div class="mt-4 text-center">
          <h3 class="font-semibold text-deep-navy">Wellness Tools</h3>
          <p class="text-sm text-gray-600 mt-2">Access breathing exercises, grounding techniques, and more</p>
        </div>
      </div>

      <!-- Check-In Screen -->
      <div class="bg-white rounded-3xl p-6 shadow-lg">
        <div class="bg-deep-navy rounded-2xl overflow-hidden">
          <img 
            src="/images/app-screenshots/checkin.png" 
            alt="Amplifly Check-In screen for logging emotions and sensory levels" 
            class="w-full h-auto"
          />
        </div>
        <div class="mt-4 text-center">
          <h3 class="font-semibold text-deep-navy">Daily Check-In</h3>
          <p class="text-sm text-gray-600 mt-2">Log your emotions and track sensory overload levels</p>
        </div>
      </div>

      <!-- AI Chat Screen -->
      <div class="bg-white rounded-3xl p-6 shadow-lg">
        <div class="bg-deep-navy rounded-2xl overflow-hidden">
          <img 
            src="/images/app-screenshots/ai-chat.png" 
            alt="Amplifly AI Chat interface for personalized support" 
            class="w-full h-auto"
          />
        </div>
        <div class="mt-4 text-center">
          <h3 class="font-semibold text-deep-navy">AI Assistant</h3>
          <p class="text-sm text-gray-600 mt-2">Get personalized support for anxiety and sensory overload</p>
        </div>
      </div>
    </div>
  </div>
</section>